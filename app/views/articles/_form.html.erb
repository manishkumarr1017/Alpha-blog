<%= render 'shared/errors', obj: @article %>


<%= form_with(model: @article, local: true) do |f| %>
<div class="login-form">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-10">
        <div class="form-group h5">
          <%= f.label :title, class: "row col-2 col-form-label text-light" %>
          <div class="row col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>
        <div class="form-group h5 mt-4">
          <%= f.label :description, class: "row col-2 col-form-label text-light" %>
          <div class="row col-10"> 
            <%= f.text_area :description, rows: 8, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="btn btn-success place-center">
  <a><%= f.submit id: "id", class: "text-white" %></a>
</div>
<% end %>